<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StorageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/audiowide"
            android:text="MEDICAL REPORT"
            android:textColor="@color/pink_dark2"
            android:textSize="20dp"
            android:textStyle="bold" />



        <ImageView
            android:id="@+id/imageview_image"
            android:layout_marginTop="23dp"
            android:layout_width="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="230dp"
            app:srcCompat="@drawable/mreportbig" />


        <EditText
            android:id="@+id/etPatient_Name"
            android:layout_width="280dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginTop="23dp"
            android:autofillHints=""
            android:background="@drawable/backgroundbox"
            android:ems="10"
            android:hint="Enter Patient Name"
            android:inputType="textCapCharacters"
            android:minHeight="48dp"
            android:padding="9dp"
            android:textColor="@color/black"
            android:textColorHint="#9C9898" />

        <ProgressBar
            android:id="@+id/progressBar_pb"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginTop="23dp" />

        <Button
            android:id="@+id/upload_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginTop="23dp"
            android:text="Upload" />

        <TextView
            android:id="@+id/showAll_txt"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="23dp"
            android:fontFamily="sans-serif"
            android:gravity="center|center_horizontal"
            android:text="Show All"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="italic" />


    </LinearLayout>

</RelativeLayout>