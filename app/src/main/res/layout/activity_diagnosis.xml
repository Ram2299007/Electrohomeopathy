<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mgUnicorn.DiagnosisActivity.Diagnosis"
    android:id="@+id/diagnosisId">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtdiscovery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="23dp"
            android:fontFamily="sans-serif-medium"
            android:text="DISCOVERY"
            android:textColor="@color/pink_dark2"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtpresentcomplants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:text="Present Complaints"
            android:textColor="#651FFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etPresentComplaints"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/backgroundbox"
            android:ems="10"
            android:hint="Enter present complaints"

            android:inputType="textPersonName"
            android:padding="5dp"
            android:textStyle=

                "bold|italic" />


        <TextView
            android:id="@+id/txtdiagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Diagnosis"
            android:textColor="#651FFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etDiagnosis"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/backgroundbox"
            android:ems="10"
            android:hint="Enter diagnosis"

            android:inputType="textPersonName"
            android:padding="5dp"
            android:textStyle=

                "bold|italic" />

        <TextView
            android:id="@+id/txtinestigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Investigation"
            android:textColor="#651FFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etInvestigation"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/backgroundbox"
            android:ems="10"
            android:hint="Enter investigation"

            android:inputType="textPersonName"
            android:padding="5dp"
            android:textStyle=

                "bold|italic" />


        <TextView
            android:id="@+id/txtxTreatment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Treatment"
            android:textColor="#651FFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etTreatment"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/backgroundbox"
            android:ems="10"
            android:hint="Enter treatment"

            android:inputType="textPersonName"
            android:padding="5dp"
            android:textStyle=

                "bold|italic" />

        <Button
            android:id="@+id/btnPinttoCase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:text="Pin to Casepaper"
            app:cornerRadius="5dp" />

    </LinearLayout>

</RelativeLayout>