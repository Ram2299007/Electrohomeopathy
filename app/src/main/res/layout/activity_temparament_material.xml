<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.callsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/temp2"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/temp1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"

            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/faint_black2"
            android:fontFamily="@font/amarante"
            android:gravity="center_horizontal|center_vertical"
            android:text="Lymphatic Temperament..S1"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/temp1"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#D50000"
            android:fontFamily="@font/amarante"
            android:gravity="center_horizontal|center_vertical"
            android:text="Sanguine Temperament..A3"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/temp4"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@id/temp3"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"

            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#FFD600"
            android:fontFamily="@font/amarante"
            android:gravity="center_horizontal|center_vertical"
            android:text="Bilious Temperament..S5"
            android:textColor="@color/black"
            android:textSize="26dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/temp3"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/temp2"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"

            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/purple_200"
            android:fontFamily="@font/amarante"
            android:gravity="center_horizontal|center_vertical"
            android:text="Nervous Temperament..F1"
            android:textColor="@color/black"
            android:textSize="26dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>


</ScrollView>