<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GooglePayment2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ImgUpi"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/upi" />

        <TextView
            android:id="@+id/txtAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="AMOUNT"
            android:textColor="#651FFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/etAmountp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/backgroundbox"
            android:ems="10"
            android:gravity="center"

            android:hint="Enter Only 2000/-"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text="500"
            android:textStyle=

                "bold|italic"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/txtUpiId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="UPI ID"
            android:textColor="#651FFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/etUpiIdp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/backgroundbox"
            android:gravity="center"
            android:padding="5dp"
            android:text="kbxkundan9ru51503@yesbank"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="NAME"
            android:textColor="#651FFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/backgroundbox"
            android:gravity="center"
            android:padding="5dp"
            android:text="Dr. Kundan Madne"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="NOTE"
            android:textColor="#651FFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNotep"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/backgroundbox"
            android:ems="10"
            android:gravity="center"

            android:hint="Enter your own Note"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text="Ok"
            android:textStyle=

                "bold|italic"
            tools:ignore="TouchTargetSizeCheck" />


        <Button
            android:id="@+id/btnSendUpip"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="Send By Upi" />


    </LinearLayout>

</RelativeLayout>